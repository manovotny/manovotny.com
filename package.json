{
    "name": "manovotny.com",
    "description": "My personal website.",
    "version": "0.0.0",
    "author": {
        "name": "Michael Novotny",
        "email": "manovotny@gmail.com",
        "url": "https://manovotny.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/manovotny/manovotny.com.git"
    },
    "engines": {
        "node": "8.11.3",
        "yarn": ">=1.5.1"
    },
    "files": [
        "components",
        "data",
        "icons",
        "pages",
        "static",
        "styles",
        "utils"
    ],
    "scripts": {
        "analyze": "cross-env ANALYZE=true next build",
        "dev": "next",
        "deploy": "yarn export && cd out && now",
        "export": "node scripts/export.js",
        "imageoptim": "yarn imageoptim:gif && imageoptim:jpg && imageoptim:png",
        "imageoptim:gif": "imageoptim \"static/**/*.gif\"",
        "imageoptim:jpg": "imageoptim --no-imageoptim --jpegmini \"static/**/*.jpg\"",
        "imageoptim:png": "imageoptim --no-imageoptim --imagealpha \"static/**/*.png\"",
        "lint": "eslint . --ext .json --ext .js",
        "precommit": "lint-staged",
        "prettier": "prettier --write \"**/*.{js,json,md,mdx}\"",
        "release": "cd out && now alias",
        "start": "yarn export && serve out",
        "test": "yarn lint"
    },
    "lint-staged": {
        "*.{js,json,md,mdx}": ["prettier --write", "git add"],
        "*.gif": ["imageoptim", "git add"],
        "*.jpg": ["imageoptim --no-imageoptim --jpegmini", "git add"],
        "*.png": ["imageoptim --no-imageoptim --imagealpha", "git add"]
    },
    "dependencies": {
        "@mdx-js/mdx": "0.12.0",
        "@mdx-js/tag": "0.11.0",
        "luxon": "1.3.1",
        "next": "6.1.1",
        "next-ga": "1.0.3",
        "react": "16.4.1",
        "styled-components": "3.3.3",
        "styled-reset": "1.3.5",
        "title": "3.3.0"
    },
    "devDependencies": {
        "@zeit/next-mdx": "1.1.0",
        "babel-plugin-inline-react-svg": "0.5.3",
        "babel-plugin-styled-components": "1.5.1",
        "cross-env": "5.2.0",
        "eslint": "4.19.1",
        "eslint-config-get-off-my-lawn": "4.0.0",
        "eslint-config-prettier": "2.9.0",
        "execa": "0.10.0",
        "globby": "8.0.1",
        "husky": "0.14.3",
        "imageoptim-cli": "2.0.3",
        "lint-staged": "7.2.0",
        "listr": "0.14.1",
        "prettier": "1.13.7",
        "prettify-xml": "1.2.0",
        "react-dom": "16.4.1",
        "serve": "9.4.0",
        "shelljs": "0.8.2",
        "webpack-bundle-analyzer": "2.13.1"
    }
}
