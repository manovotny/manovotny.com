{
  "name": "manovotny.com",
  "description": "My website built with Next.js, MDX, Tailwind, and Vercel.",
  "version": "2.0.0",
  "private": true,
  "author": {
    "name": "Michael Novotny",
    "email": "manovotny@gmail.com",
    "url": "https://manovotny.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manovotny/manovotny.com.git"
  },
  "engines": {
    "node": ">=23.0.0"
  },
  "files": [
    "app",
    "components",
    "mdx-components.tsx"
  ],
  "scripts": {
    "check": "npm-check -u",
    "build": "next build",
    "dev": "next dev --turbo",
    "lint": "next lint",
    "prettier": "prettier --write --ignore-unknown .",
    "prettier:check": "prettier --check --ignore-unknown .",
    "start": "next start",
    "test": "npm run lint && npm run prettier:check && tsc"
  },
  "git": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@mdx-js/loader": "3.1.0",
    "@mdx-js/react": "3.1.0",
    "@next/mdx": "15.0.3",
    "@vercel/analytics": "1.3.2",
    "next": "15.0.3",
    "next-view-transitions": "0.3.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "sugar-high": "0.7.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "0.0.0-development.1",
    "@types/mdx": "2.0.13",
    "@types/node": "22.9.0",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@vercel/git-hooks": "1.0.0",
    "autoprefixer": "10.4.20",
    "eslint": "9.14.0",
    "eslint-config-next": "15.0.3",
    "lint-staged": "15.2.10",
    "npm-check": "6.0.1",
    "postcss": "8.4.47",
    "prettier": "3.3.3",
    "prettier-plugin-tailwindcss": "0.6.8",
    "tailwindcss": "4.0.0-alpha.31",
    "typescript": "5.6.3"
  },
  "overrides": {
    "next-view-transitions": {
      "next": "$next"
    }
  }
}
