{
  "author": {
    "email": "manovotny@gmail.com",
    "name": "Michael Novotny",
    "url": "https://manovotny.com"
  },
  "dependencies": {
    "@heroicons/react": "2.2.0",
    "@mdx-js/loader": "3.1.1",
    "@mdx-js/react": "3.1.1",
    "@next/mdx": "16.0.7",
    "@vercel/analytics": "1.6.1",
    "@vercel/speed-insights": "1.3.1",
    "clsx": "2.1.1",
    "geist": "1.5.1",
    "git-jiggy": "2.1.1",
    "next": "16.0.7",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "rehype-unwrap-images": "1.0.0",
    "remark-sugar-high": "0.6.0",
    "tailwind-merge": "3.4.0"
  },
  "description": "My website built with Next.js, MDX, Tailwind, and Vercel.",
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@tailwindcss/postcss": "4.1.17",
    "@types/mdx": "2.0.13",
    "@types/node": "24.10.1",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@vercel/git-hooks": "1.0.0",
    "lint-staged": "16.2.7",
    "npm-check": "6.0.1",
    "tailwindcss": "4.1.17",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "files": [
    "app",
    "components",
    "lib",
    "mdx-components.tsx"
  ],
  "git": {
    "pre-commit": "lint:staged"
  },
  "license": "MIT",
  "lint-staged": {
    "*": "npm run lint -- --files-ignore-unknown=true"
  },
  "name": "manovotny.com",
  "overrides": {
    "@vercel/analytics": {
      "next": "$next"
    },
    "@vercel/speed-insights": {
      "next": "$next"
    },
    "geist": {
      "next": "$next"
    }
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manovotny/manovotny.com.git"
  },
  "scripts": {
    "build": "next build --turbopack",
    "check": "npm-check -u",
    "dev": "next dev --turbopack",
    "lint": "biome check",
    "lint:fix": "npm run lint -- --write",
    "lint:staged": "lint-staged",
    "prettier": "prettier --write --ignore-unknown .",
    "prettier:check": "prettier --check --ignore-unknown .",
    "start": "next start",
    "test": "npm run lint && tsc && npm run test:unit",
    "test:unit": "tsx --test './tests/**/*.test.*'"
  },
  "version": "2.0.0"
}
