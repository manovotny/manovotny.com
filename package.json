{
  "name": "manovotny.com",
  "description": "My website built with Next.js, MDX, Tailwind, and Vercel.",
  "version": "2.0.0",
  "private": true,
  "author": {
    "name": "Michael Novotny",
    "email": "manovotny@gmail.com",
    "url": "https://manovotny.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manovotny/manovotny.com.git"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "files": [
    "app",
    "components",
    "lib",
    "mdx-components.tsx"
  ],
  "scripts": {
    "check": "npm-check -u",
    "build": "next build --turbopack",
    "dev": "next dev --turbopack",
    "lint": "next lint",
    "lint-staged": "lint-staged",
    "prettier": "prettier --write --ignore-unknown .",
    "prettier:check": "prettier --check --ignore-unknown .",
    "start": "next start",
    "test": "npm run lint && npm run prettier:check && tsc && npm run test:unit",
    "test:unit": "tsx --test './tests/**/*.test.*'"
  },
  "git": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@heroicons/react": "2.2.0",
    "@mdx-js/loader": "3.1.1",
    "@mdx-js/react": "3.1.1",
    "@next/mdx": "15.4.2-canary.5",
    "@vercel/analytics": "1.5.0",
    "@vercel/speed-insights": "1.2.0",
    "clsx": "2.1.1",
    "geist": "1.5.1",
    "git-jiggy": "2.1.1",
    "next": "15.4.2-canary.5",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "rehype-unwrap-images": "1.0.0",
    "remark-sugar-high": "0.6.0",
    "tailwind-merge": "3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.1",
    "@tailwindcss/postcss": "4.1.13",
    "@types/mdx": "2.0.13",
    "@types/node": "24.6.1",
    "@types/react": "19.1.16",
    "@types/react-dom": "19.1.9",
    "@vercel/git-hooks": "1.0.0",
    "eslint": "9.36.0",
    "eslint-config-next": "15.4.2-canary.5",
    "globby": "15.0.0",
    "lint-staged": "16.2.3",
    "npm-check": "6.0.1",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.6.14",
    "tailwindcss": "4.1.13",
    "tsx": "4.20.6",
    "typescript": "5.9.3"
  },
  "overrides": {
    "@vercel/analytics": {
      "next": "$next"
    },
    "@vercel/speed-insights": {
      "next": "$next"
    },
    "geist": {
      "next": "$next"
    }
  }
}
