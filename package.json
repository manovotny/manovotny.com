{
    "name": "manovotny.com",
    "description": "My website built with Next.js, MDX, Tailwind, and Vercel.",
    "version": "2.0.0",
    "private": true,
    "author": {
        "name": "Michael Novotny",
        "email": "manovotny@gmail.com",
        "url": "https://manovotny.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/manovotny/manovotny.com.git"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    },
    "packageManager": "pnpm@8.7.0",
    "scripts": {
        "build": "next build",
        "dev": "next dev",
        "lint": "eslint . --ext .js,.json",
        "prettier": "prettier --write --ignore-unknown .",
        "prettier:check": "prettier --check --ignore-unknown .",
        "start": "next start",
        "test": "npm run lint && npm run prettier:check"
    },
    "git": {
        "pre-commit": "lint-staged"
    },
    "lint-staged": {
        "*": "prettier --write --ignore-unknown"
    },
    "dependencies": {
        "next": "13.4.19",
        "react": "18.2.0",
        "react-dom": "18.2.0"
    },
    "devDependencies": {
        "@vercel/git-hooks": "1.0.0",
        "eslint": "8.8.0",
        "eslint-config-get-off-my-lawn": "7.2.0",
        "lint-staged": "14.0.1",
        "prettier": "3.0.3",
        "prettier-config-get-off-my-lawn": "1.0.0"
    }
}
