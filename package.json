{
    "name": "manovotny.com",
    "description": "My website built with Next.js, MDX, Tailwind, and Vercel.",
    "version": "2.0.0",
    "private": true,
    "author": {
        "name": "Michael Novotny",
        "email": "manovotny@gmail.com",
        "url": "https://manovotny.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/manovotny/manovotny.com.git"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    },
    "packageManager": "pnpm@8.7.0",
    "files": [
        "app",
        "components",
        "mdx-components.tsx"
    ],
    "scripts": {
        "build": "next build",
        "dev": "next dev",
        "lint": "next lint",
        "prettier": "prettier --write --ignore-unknown .",
        "prettier:check": "prettier --check --ignore-unknown .",
        "start": "next start",
        "test": "npm run lint && npm run prettier:check"
    },
    "git": {
        "pre-commit": "lint-staged"
    },
    "lint-staged": {
        "*": "prettier --write --ignore-unknown"
    },
    "dependencies": {
        "@mdx-js/loader": "2.3.0",
        "@mdx-js/react": "2.3.0",
        "@next/mdx": "13.5.2",
        "eslint-config-next": "13.5.2",
        "next": "13.5.2",
        "react": "18.2.0",
        "react-dom": "18.2.0"
    },
    "devDependencies": {
        "@tailwindcss/typography": "0.5.10",
        "@types/mdx": "2.0.7",
        "@vercel/git-hooks": "1.0.0",
        "autoprefixer": "10.4.16",
        "eslint": "8.50.0",
        "lint-staged": "14.0.1",
        "postcss": "8.4.30",
        "prettier": "3.0.3",
        "prettier-plugin-tailwindcss": "0.5.4",
        "tailwindcss": "3.3.3",
        "typescript": "5.2.2"
    }
}
