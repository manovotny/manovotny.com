{
    "name": "manovotny.com",
    "description": "My personal website.",
    "version": "0.0.0",
    "author": {
        "name": "Michael Novotny",
        "email": "manovotny@gmail.com",
        "url": "https://manovotny.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/manovotny/manovotny.com.git"
    },
    "engines": {
        "node": "12.13.1",
        "yarn": ">=1.5.1"
    },
    "files": [
        "components",
        "data",
        "icons",
        "pages",
        "static",
        "styles",
        "utils"
    ],
    "scripts": {
        "analyze": "cross-env ANALYZE=true next build",
        "build": "cross-env NODE_ENV=production next build",
        "dev": "next",
        "imageoptim": "yarn imageoptim:gif && yarn imageoptim:jpg && yarn imageoptim:png",
        "imageoptim:gif": "imageoptim \"static/**/*.gif\"",
        "imageoptim:jpg": "imageoptim --no-imageoptim --jpegmini \"static/**/*.jpg\"",
        "imageoptim:png": "imageoptim --no-imageoptim --imagealpha \"static/**/*.png\"",
        "lint": "eslint . --ext .json --ext .js",
        "prettier": "prettier --write \"**/*.{html,js,json,md,mdx,mjs,yml}\"",
        "start": "cross-env NODE_ENV=production next start",
        "test": "yarn lint"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{html,js,json,md,mdx,mjs,yml}": [
            "prettier --write",
            "git add"
        ],
        "*.gif": [
            "imageoptim",
            "git add"
        ],
        "*.jpg": [
            "imageoptim --no-imageoptim --jpegmini",
            "git add"
        ],
        "*.png": [
            "imageoptim --no-imageoptim --imagealpha",
            "git add"
        ]
    },
    "dependencies": {
        "@mdx-js/mdx": "1.5.5",
        "@mdx-js/tag": "0.20.3",
        "date-fns": "1.30.1",
        "globby": "11.0.0",
        "next": "9.2.0",
        "react": "16.12.0",
        "styled-components": "5.0.0",
        "styled-reset": "4.0.9",
        "title": "3.4.1"
    },
    "devDependencies": {
        "@zeit/next-mdx": "1.2.0",
        "babel-plugin-inline-react-svg": "1.1.0",
        "babel-plugin-styled-components": "1.10.6",
        "cross-env": "6.0.3",
        "eslint": "6.8.0",
        "eslint-config-get-off-my-lawn": "5.0.1",
        "husky": "3.0.9",
        "imageoptim-cli": "3.0.2",
        "lint-staged": "9.4.2",
        "prettier": "1.19.1",
        "react-dom": "16.12.0",
        "webpack-bundle-analyzer": "3.6.0"
    }
}
