{
    "name": "manovotny.com",
    "description": "My website built with Next.js, MDX, Tailwind, and Vercel.",
    "version": "2.0.0",
    "private": true,
    "author": {
        "name": "Michael Novotny",
        "email": "manovotny@gmail.com",
        "url": "https://manovotny.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/manovotny/manovotny.com.git"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "files": [
        "app",
        "components",
        "mdx-components.tsx"
    ],
    "scripts": {
        "check": "npm-check -u",
        "build": "next build",
        "dev": "next dev --turbo",
        "lint": "next lint",
        "prettier": "prettier --write --ignore-unknown .",
        "prettier:check": "prettier --check --ignore-unknown .",
        "start": "next start",
        "test": "npm run lint && npm run prettier:check && tsc"
    },
    "git": {
        "pre-commit": "lint-staged"
    },
    "lint-staged": {
        "*": "prettier --write --ignore-unknown"
    },
    "dependencies": {
        "@mdx-js/loader": "3.1.0",
        "@mdx-js/react": "3.1.0",
        "@next/mdx": "15.0.2",
        "next": "15.0.2",
        "react": "18.3.1",
        "react-dom": "18.3.1"
    },
    "devDependencies": {
        "@tailwindcss/typography": "0.5.15",
        "@types/mdx": "2.0.13",
        "@types/node": "22.8.6",
        "@types/react": "18.3.12",
        "@types/react-dom": "18.3.1",
        "@vercel/git-hooks": "1.0.0",
        "autoprefixer": "10.4.20",
        "eslint": "9.14.0",
        "eslint-config-next": "15.0.2",
        "lint-staged": "15.2.10",
        "npm-check": "6.0.1",
        "postcss": "8.4.47",
        "prettier": "3.3.3",
        "prettier-plugin-tailwindcss": "0.6.8",
        "tailwindcss": "3.4.14",
        "typescript": "5.6.3"
    }
}
